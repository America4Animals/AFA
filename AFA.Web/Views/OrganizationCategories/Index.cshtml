@model AFA.ServiceModel.OrganizationCategoriesResponse

@{
    ViewBag.Title = "Organization Categories";
}

<h2 class="page-header">@ViewBag.Title</h2>

<ul>
    @foreach (var orgCategory in Model.OrganizationCategories)
    {
        <li class="margin-bottom">
            @Html.ActionLink(orgCategory.Name, "Edit", "OrganizationCategories", new {id = orgCategory.Id}, null)
            @using (Html.BeginForm("Delete", "OrganizationCategories", new { id = orgCategory.Id }, FormMethod.Post, new { @class = "inline" }))
            {
                <input type="submit" value="Delete" class="margin-left btn btn-danger" />
            }
            
        </li>
    }
</ul>

<div>@Html.ActionLink("Add New", "Add", "OrganizationCategories", null, new {@class="btn btn-primary"})</div>
