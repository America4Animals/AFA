<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFF">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/main_ui_container"
        android:background="#FFF">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/allyLogo"
            android:src="@drawable/animal_ally_logo_med"
            android:gravity="center"
            android:layout_marginTop="15dip" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/welcomeHeader"
            android:text="@string/WelcomeMessageHeader"
            android:textColor="@color/pink"
            android:textSize="22sp"
            android:layout_marginRight="20dip"
            android:layout_marginBottom="20dip"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="10dip" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/welcomeText"
            android:text="@string/WelcomeMessageText"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:background="@color/white"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginBottom="10dip" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="20dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:id="@+id/linearLayoutButtons">
            <com.facebook.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                facebook:login_text="Connect with Facebook" />
            <Button
                android:text="Use without signing in"
                android:id="@+id/btnNoLogin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>